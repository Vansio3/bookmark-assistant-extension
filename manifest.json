{
  "manifest_version": 3,
  "name": "Bookmark Assistant",
  "version": "1.0",
  "description": "An enhanced Chrome extension to intelligently filter and display your bookmarks.",
  "permissions": [
    "bookmarks"
  ],
  "host_permissions": [
    "https://www.google.com/s2/favicons*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "description": "Open Bookmark Filter"
    }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https://www.google.com https://*.gstatic.com;"
  }
}